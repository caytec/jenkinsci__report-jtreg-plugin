<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>org.jenkins-ci.plugins</groupId>
        <artifactId>plugin</artifactId>
        <version>4.65</version>
    </parent>
    <groupId>io.jenkins.plugins</groupId>
    <artifactId>report-jtreg</artifactId>
    <version>${revision}${changelist}</version>
    <!-- use -P hpi for jenkins plugin build (default) or -P jar for assembled diff -->
    <packaging>${packaging-type}</packaging>
    <name>JTReg Plugin</name>

    <properties>
        <revision>2.2</revision>
        <changelist>-SNAPSHOT</changelist>
        <gitHubRepo>jenkinsci/report-jtreg-plugin</gitHubRepo>
        <chartjs.version>1.0.2.6</chartjs.version>
        <jenkins.version>2.361.4</jenkins.version>
    </properties>

    <developers>
        <developer>
            <id>baiduzhyi.devel</id>
            <name>Stanislav Baiduzhyi</name>
            <email>baiduzhyi.devel@gmail.com</email>
        </developer>
        <developer>
            <id>jvanek</id>
            <name>Jiri Vanek</name>
            <email>jvanek@redhat.com</email>
        </developer>
    </developers>

    <licenses>
        <license>
            <name>MIT</name>
            <url>https://www.opensource.org/licenses/mit-license.php</url>
        </license>
    </licenses>

    <url>https://github.com/jenkinsci/${project.artifactId}-plugin</url>
    <scm>
        <connection>scm:git:https://github.com/jenkinsci/${project.artifactId}-plugin.git</connection>
        <developerConnection>scm:git:git@github.com:jenkinsci/${project.artifactId}-plugin.git</developerConnection>
        <url>https://github.com/jenkinsci/${project.artifactId}-plugin</url>
        <tag>HEAD</tag>
    </scm>


    <profiles>
        <profile>
            <!-- To use this profile run command "mvn clean install -P jar" to  service jar-->
            <id>jar</id>
            <properties>
                <packaging-type>jar</packaging-type>
            </properties>

            <dependencies>
                <dependency>
                    <groupId>org.jenkins-ci.main</groupId>
                    <artifactId>jenkins-core</artifactId>
                    <version>${jenkins.version}</version>
                </dependency>
            </dependencies>

            <build>
                <plugins>
                    <plugin>
                        <!-- Assembly plugin works only when packaging is JAR. Is ignored for HPI -->
                        <artifactId>maven-assembly-plugin</artifactId>
                        <version>3.6.0</version>
                        <configuration>
                            <descriptorRefs>
                                <descriptorRef>jar-with-dependencies</descriptorRef>
                            </descriptorRefs>
                        </configuration>
                        <executions>
                            <execution>
                                <id>create-services-archive</id>
                                <phase>package</phase>
                                <goals>
                                    <goal>single</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>

        <profile>
            <!-- To use this profile run command "mvn clean install -P hpi" to  build plugin-->
            <id>hpi</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <properties>
                <packaging-type>hpi</packaging-type>
            </properties>
        </profile>
    </profiles>

    <repositories>
        <repository>
            <id>repo.jenkins-ci.org</id>
            <url>https://repo.jenkins-ci.org/public/</url>
        </repository>
    </repositories>
    <pluginRepositories>
        <pluginRepository>
            <id>repo.jenkins-ci.org</id>
            <url>https://repo.jenkins-ci.org/public/</url>
        </pluginRepository>
    </pluginRepositories>

    <dependencies>
        <dependency>
            <groupId>io.jenkins.plugins</groupId>
            <artifactId>chartjs-api</artifactId>
            <version>${chartjs.version}</version>
        </dependency>
        <dependency>
            <groupId>com.google.code.gson</groupId>
            <artifactId>gson</artifactId>
            <version>2.10.1</version>
        </dependency>
        <dependency>
            <groupId>com.fasterxml.woodstox</groupId>
            <artifactId>woodstox-core</artifactId>
            <version>5.4.0</version>
        </dependency>
    </dependencies>
</project>
